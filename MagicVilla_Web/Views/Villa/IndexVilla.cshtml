@model IEnumerable<MagicVilla_Web.Models.Dto.VillaDTO>

<br/>
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Villa List</h1>
        </div>
        <div class="col text-end pt-1">
            <a class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i>Create new villa</a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Occupancy
                </th>
                <th>
                    Price
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>
                        @item.name
                    </td>
                    <td>
                        @item.occupancy
                    </td>
                    <td>
                        @((item.rate).ToString("c"))
                    </td>
                    <td></td>
                </tr>
            }
        </tbody>
    </table>
</div>